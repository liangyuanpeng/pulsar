<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
    </Console>
    <File name="log" fileName="log/log.log" append="false">
      <PatternLayout pattern="%d{yyyy.MM.dd HH:mm:ss} %5p %C %M %m%n"/>
    </File>
  </Appenders>

  <Loggers>
    <logger name="org.apache.pulsar" level="debug"></logger>
    <root  level="INFO">
      <appender-ref ref="Console" />
    </root>
  </Loggers>
</Configuration>